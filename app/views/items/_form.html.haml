.container
  = simple_nested_form_for @item, :html => { :class => 'form-horizontal' } do |f|
    .col-lg-4
      = f.input :title, autofocus: true
      = f.input :description, input_html: { rows: '10', cols: '45'}
    .col-lg-4
      %h4
        Set Your Item's Range
      = f.input :max_price, label: "Maximum Price"
      = f.input :min_price, label: "Minimum Price"
      = f.input :link, label: 'Link To Your Website'
    .col-lg-4
      = f.fields_for :images do |j|
        =j.input :picture, label: "Upload Product Images"
        = j.link_to_remove do
          %i.fa.fa-times  Remove Image
          %hr
      = f.link_to_add :images do
        %i.fa.fa-check Add An Image
    .col-lg-12= f.button :submit, :class => 'btn-primary'


