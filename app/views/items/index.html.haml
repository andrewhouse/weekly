.container
  %input.search{'ng-model' => 'searchText', 'ng-model-options' => '{debounce: 500}', "placeholder" => "Search by Title or Description", 'autofocus' => true} 
  %br
  .col-lg-3{'ng-repeat' => 'item in items | filter:searchText' }
    %a{"href" => "/#/items/{{item.id}}"}
      %img{"ng-src" => "{{item.images[0].url}}"}
    %a{"href" => "/#/items/{{item.id}}"}
      %h4 {{item.title}}
    %p {{item.description | limitTo: 115 }}
  -#@items.each do |item|
    %h4= link_to item.title, item_path(item)
    %h5= item.description
