%h2 Sign in
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs.form-group
    = f.input :email, required: false, autofocus: true, class: 'form-control'
    = f.input :password, required: false, class: 'form-control'
  .form-group
    = f.input :remember_me,class: 'form-control', label: false, inline_label: true,  as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "Log in", class: 'btn btn-primary'
    %hr{'style' => 'width: 20% '}
= render "devise/shared/links"
